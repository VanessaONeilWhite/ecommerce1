{% extends 'base.html.j2' %}
{% block title %}
    Market
{% endblock %}

{% block content %}
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <!-- Your Columns HERE -->
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        <!-- Your rows inside the table HERE: -->
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.price }}</td>
                    <td>${{ item.description }}</td>
                    <td>
                        <button class="btn btn-outline btn-info">Add to cart</button>
                        <button class="btn btn-outline btn-success">Order</button>
                    </td>
                </tr>
            {% endfor %}
            
    </tbody>
</table>
{% endblock %}